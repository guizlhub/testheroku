<h1>Connection</h1>
<br />
<div class="container">
	<%= form_for :session, url: sessions_path do |f| %>
		<div class="form-group">
			<label>Email</label>
			<%= f.text_field :email, class: 'form-control' %>
		</div>

		<div class="form-group">
			<label>Password</label>
			<%= f.text_field :password, class: 'form-control' %>
		</div>

		<div class="form-group">
			<button type="submit">Se connecter</button>
		</div>
		<% end %>
</div>